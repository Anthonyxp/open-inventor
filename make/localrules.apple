# Alternate rules for building shared objects
# on Apple Darwin (Mac OS X) systems.

ifeq ($(usingDarwin), 1)

LLDLIBS += -lXm -lXt -lXi -lX11 -lGLU -lGL -liconv -ldl -lstdc++

BUNDLE := $(DSO:.so=.bundle)
DSO :=

$(BUNDLE): $(OBJECTS)
	$(CXX) $(CXXDSOOPTS) $(OBJECTS) $(LDLIBS) -o $@
	mv $@ $(@:.bundle=.so)

endif
